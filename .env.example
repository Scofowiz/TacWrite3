# ThoughtStream Environment Configuration

# AI Provider Selection
# Choose which AI service to use: mock, gemini, cloudflare, or production
VITE_AI_PROVIDER=mock

# Google Gemini AI Configuration
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Cloudflare Workers AI Configuration  
# Get from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
VITE_CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Legacy AI Configuration (for custom endpoints)
VITE_AI_API_KEY=your_legacy_api_key_here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/thoughtstream

# Server Configuration
PORT=3000
NODE_ENV=development